{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "indent": [
      1,
      2
    ],
    "semi": [
      1,
      "always"
    ],
    "quotes": [
      1,
      "single"
    ],
    "brace-style": [
      1,
      "1tbs"
    ],
    "object-curly-spacing": [
      1,
      "always"
    ]
  }
}
